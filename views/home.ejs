<%- include('partials/header'); -%>
    <h1>Home</h1>
    <p>
        <%= startingContent %>
    </p>
    <% for (post of posts) { %>
        <h1>
            <%= post.title %> <small class="date">
                    <%= post.date %>
                </small>
                <h6 class="author">~By <%= post.author %></h6>
        </h1>
        <% if (post.post.length> 100) { %>
            <p>
                <%= post.post.substring(0, 100) + "..." ; %> <a href="/posts/<%=post.title%>">Read More</a>
            </p>
        <% } else { %>
            <p>
                <%= post.post %>
            </p>
        <% } %>
    <% } %>
<%- include('partials/footer'); -%>